<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Credosyssolutions.postmyletters.controllers.SignupViewController" >

    <Button
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirmpassword_signup_editText1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/email_signup_editText"
        android:layout_marginBottom="52dp"
        android:textColor="@color/white"
        android:background="@drawable/customtheme_btn_default_holo_light"
        android:text="Sign Up" />

    <EditText
        android:id="@+id/username_signup_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:ems="10"
                android:background="@drawable/customtheme_edit_text_holo_light"
        android:hint="username"
        android:text="rhlnairtest"
        
        android:gravity="center"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/email_signup_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_signup_editText"
        android:layout_below="@+id/username_signup_editText"
        android:layout_marginTop="35dp"
        android:ems="10"
                android:background="@drawable/customtheme_edit_text_holo_light"
        android:hint="email"
        android:gravity="center"
        android:text="rhlnair@gmail.com"
        
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/confirmpassword_signup_editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_signup_editText"
        android:layout_alignLeft="@+id/password_signup_editText"
        android:layout_marginTop="35dp"
        android:ems="10"
                android:background="@drawable/customtheme_edit_text_holo_light"
        android:hint="confrim password"
        android:gravity="center"
        android:text="test123"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/password_signup_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_signup_editText"
        android:layout_below="@+id/email_signup_editText"
        android:layout_marginTop="35dp"
        android:ems="10"
                android:background="@drawable/customtheme_edit_text_holo_light"
        android:hint="password"
        android:gravity="center"
        android:text="test123"
        
        android:inputType="textPassword" />

</RelativeLayout>