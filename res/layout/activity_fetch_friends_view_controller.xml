<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Credosyssolutions.postmyletters.controllers.FetchFriendsViewController" >

    <TextView
        android:id="@+id/userName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="53dp"
        android:layout_marginTop="24dp"
        android:text="Lisa Carter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/userSex_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userName_textView"
        android:layout_marginRight="53dp"
        android:text="Female"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/country_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userSex_textView"
        android:layout_marginRight="53dp"
        android:text="NetherLand"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/profile_icon_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/country_textView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/MySummary_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/profile_icon_imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="26dp"
        android:text="About Me"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/aboutMe_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MySummary_textView"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/MySummary_textView"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:text="A programmer with good appetite for food, music,travel."
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/likesdislikes_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutMe_editText"
        android:layout_below="@+id/aboutMe_editText"
        android:layout_marginTop="26dp"
        android:text="Like/Dislikes"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile_icon_imageView"
        android:layout_alignRight="@+id/aboutMe_editText"
        android:layout_below="@+id/likesdislikes_textView"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:text="Likes: Musics , Food , photography , traveling "
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/sendMessage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_toRightOf="@+id/likesdislikes_textView"
        android:text="Write Letter" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sendMessage_button"
        android:layout_alignBottom="@+id/sendMessage_button"
        android:layout_alignLeft="@+id/editText1"
        android:text="Cancel" />

</RelativeLayout>