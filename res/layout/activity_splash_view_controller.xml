<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.Credosyssolutions.postmyletters.controllers.SplashViewController" >

	<ImageView
	    android:id="@+id/imgLogo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:src="@drawable/logo_new_medium" />

	<TextView
	    android:id="@+id/appNameTextView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:text="Lettermate"
	    android:textSize="70dp"
	    
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<ProgressBar
	    android:id="@+id/splash_progressBar"
	    style="?android:attr/progressBarStyleHorizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/imgLogo"
	    android:layout_alignParentBottom="true"
	    android:layout_alignRight="@+id/imgLogo"
	    android:minHeight="5dip" 
android:maxHeight="5dip"
	    android:layout_marginBottom="57dp" />

</RelativeLayout>
